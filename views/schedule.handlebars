<h1>Book a Lesson with {{instructor.name}}</h1>
<a href="/">Go Home</a>

<hr />

<form action="/lessons/schedule" method="post">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name">
    <input type="hidden" id="instructor" name="instructor" value="{{instructor.id}}">
  </div>
  <div>
    <label for="mail">E-mail:</label>
    <input type="email" id="mail" name="mail">
  </div>
  <div>
    <label for="name">Phone:</label>
    <input type="text" id="phone" name="phone">
  </div>
  <div>
    <label for="name">Day/Time:</label>
    <input type="text" id="day_time" name="day_time">
  </div>
  <div>
    <label for="comments">Comments:</label>
    <textarea id="comments" name="comments"></textarea>
  </div>
  <div>
    <input type="button" value="Book" onclick="saveForm()"/>
  </div>

</form>
<script src="../lib/formService" type="text/javascript"></script>

